<!DOCTYPE html>
<html lang="es">
<!--Head-->
<head>
    <%- include("partials/head") %>
    <title>Detalles del producto</title>
</head>
<body class="body-product">
    <!--Header-->
    <%- include("partials/header") %>
    <div class="body-productdetails">
        <h2 class="titulo-detalle-producto"><%=product.nombre%></h2>
        <section class="detalles-producto">
            <section class ="imagenes-producto">
                <img class ="imagen-principal" src="/images/<%=product.img%>" alt="">
                <div class="imagenes-secundarias">
                    
                </div>
            </section>
            <section class ="descripcion-del-producto">
                <h3 class="relleno-descripcion precio-detalles">$<%=product.precio%></p></h3>
                <div class="despliegue-opciones">
                    <details>
                        <summary>
                            <h3 class="relleno-descripcion opcion-detalles">Descripción <i class="fa-solid fa-arrow-down"></i></h3>
                        </summary>
                        <ul>
                            <li><p class="relleno-descripcion opcion-descripcion"><%= product.description%> </p></li>
                        </ul>
                    </details>
                </div>
                <div class="despliegue-opciones">
                    <details>
                        <summary>
                            <h3 class="relleno-descripcion opcion-detalles">Caracteristicas <i class="fa-solid fa-arrow-down"></i></h3>
                        </summary>  
                        <ul class="relleno-descripcion opcion-descripcion">
                            <li><%=product.desciption%></li>
                        </ul>
                    </details>
                </div>
                <div class="cantidad-descripcion-del-producto">
                    <label class="titulo-cantidad" for="cantidad">Cantidad</label>
                    <input class="cantidad-añadir" name="cantidad" id="cantidad"type="number">
                </div>
                <div class="div-boton-añadir">
                    <a href="/carrito"><button class="boton-añadir">Añadir al carrito</button></a>
                </div>
                <!--boton de editar los productos-->
                <div class="btn-eliminar-editar">
                    <form action="/productos-detail/<%= product.id%>?_method=PUT" method="POST">
                        <button class="btn-editar"><a href="/product-detail/<%= product.id%>/edit"> Editar</a></button>
                    </form>
                 <!--boton de eliminar-->   
                    <form action="/productos-detail/<%= product.id%>?_method=DELETE" method="POST">
                        <button class="btn-eliminar" type="submit">Eliminar</button>
                    </form>
                </div>
            </section>
        </section>
        
    </div>
    <% for (let i=0; i < product.length; i++){ %>
        <% if(product[i].id != id){ %>
           <% let otro = i++;%>
        <section class="barra-siguiente-instrumento">
            <a href="/product-detail/<%=product[otro].id%>"><i class="far fa-arrow-alt-circle-left"></i></a>
            <h2>Ver otro instrumento</h2>
            <a href="/product-detail/<%=product[otro].id%>"><i class="far fa-arrow-alt-circle-right"></i></a>
        </section>
        <% }} %>
    <%- include("./partials/footer") %>

        <section class="footer-product">
            <p>a</p>
        </section>
        
    
</body>
</html>