<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/userConfig.css">
    <link rel="shortcut icon" href="/images/imagen_logo_sonata_v1.png">
    <script src="https://kit.fontawesome.com/0aeb7696ea.js" crossorigin="anonymous"></script>
    <title>Registro</title>

    <!--CUSTOM CSS-->
    <link rel="stylesheet" href="/css/styles_header.css">
    <link rel="stylesheet" href="/css/styles_footer.css">
    <link rel="stylesheet" href="/css/styles_validaciones.css">
</head>

<body>
    <%- include('../partials/header') %>
        <main>
            <section class="encabezado_formulario">
                
                <div class="encabezado_formulario_parte">
                    <h5>
                        Configuración del Usuario
                    </h5>
                </div>
                <div class="icon_user">
                    <i class="fa-solid fa-gear"></i>
                </div>
                <div class="encabezado_formulario_parte">
                    <select name="" id="">
                        <option value="">Credenciales</option>
                        <option value="">Imagen del Usuario</option>
                        <option value="">Contraseña del Usuario</option>
                    </select>
                </div>
                
            </section>

            <section class="contenedor_registro">

                <form action="/config/?_method=put"  method="post" class="formulario_registro">
                    <h2 style="border-radius: 2rem 2rem 0rem 0rem;" class="titulo_formulario">Credenciales</h2>
                    <div class="campo_formulario_registro">
                        <label for="user_name">Nombre de usuario: </label>
                        <input value="<%=userConfig.userName%>" placeholder="Ejemplo: Artemis402" id="user_name" name="user_name" type="text">
                        <div class="error_usuario"> </div>
                    </div>

                    <div class="campo_formulario_registro">
                        <label for="user_email">Correo electronico: </label>
                        <input value="<%=userConfig.email%>" placeholder="Ejemplo: artemisIris@dominio.com" id="user_email" name="user_email" type="email" readonly>
                    </div>

                    <div class="campo_formulario_registro">
                        <label for="client_fullname">Nombre completo: </label>
                        <input value="<%=userConfig.fullName%>" id="client_fullname" name="client_fullname" type="text">
                        <div class="error_nombre"> </div>
                    </div>

                    <div class="campo_formulario_registro">
                        <label for="client_fullname">Descripción: </label>
                        <input value="<%=userConfig.description%>" id="user_description" name="user_description" type="text">
                        <div class="error_description"> </div>
                    </div>

                    <div class="campo_formulario_registro_botones">
                        <input type="submit" value="Modificar">
                        <input type="reset" value="Cancelar">
                    </div>

                </form>


                <form action="/config/image/?_method=put"  method="post" enctype="multipart/form-data" class="formulario_editarImagen">
                    <h2 class="titulo_formulario">Imagen del Usuario</h2>
                    <div class="imagen_user" style="background-image: url(<%=userConfig.image%>);">
                    </div>

                    <section class="separacion_imagen">
                        <div class="campo_formulario_registro">
                            <label for="user_image">Imagen de perfil: </label>
                            <input type="file" name="user_image" id="user_image">
                            <div class="errorImagen"> </div>
                        </div>

                        <div class="campo_formulario_registro_botones">
                            <input type="submit" value="Modificar">
                            <input type="reset" value="Cancelar">
                        </div>
                    </section>

                </form>

                <form action="/config/password/?_method=put"  method="post"  class="formulario_contraseña">
                    <h2 class="titulo_formulario">Contraseña del Usuario</h2>
                    <div class="campo_formulario_registro">
                        <label for="user_password">Ingrese una nueva contraseña: </label>
                        <input id="user_password" name="user_password" type="password">
                        <div class="error_contra"> </div>
                    </div>

                    <div class="campo_formulario_registro">
                        <label for="user_passwordConfirmation">Confirmar su nueva contraseña: </label>
                        <input id="user_passwordConfirmation" name="user_passwordConfirmation" type="password">
                        <div class="error_confirmar"> </div>
                    </div>


                    <div class="campo_formulario_registro_botones">
                        <input type="submit" value="Modificar">
                        <input type="reset" value="Cancelar">
                    </div>

                </form>

            </section>
        </main>
        <!--Footer-->
        <%- include('../partials/footer') %>
        <script src="/scripts/validaciones/validatorCredenciales.js"> </script>
        <script src="/scripts/validaciones/validatorConfImagen.js"> </script>
        <script src="/scripts/validaciones/validatorContrasenia.js"> </script>
</body>

</html>